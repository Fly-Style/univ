<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL94Dialect</property>
        <property name="hibernate.connection.driver_class"> org.postgresql.Driver </property>

        <!-- Assume test is the database name -->
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/postgres</property>
        <property name="hibernate.connection.username">flystyle</property>
        <property name="hibernate.connection.password">postgres</property>

        <!--<property name="hibernate.connection.datasource"> org.postgresql.Driver </property>-->
        <!--<property name="hibernate.connection.username">flystyle</property>-->
        <!--<property name="hibernate.connection.password">postgres</property>-->

        <!--<property name="jndi.url"-->

        <mapping class="pro.alexfly.lab4.model.Station"/>
        <mapping class="pro.alexfly.lab4.model.Way"/>
        <mapping class="pro.alexfly.lab4.model.Request"/>
        <mapping class="pro.alexfly.lab4.model.Train"/>
        <mapping class="pro.alexfly.lab4.model.Admin"/>
        <mapping class="pro.alexfly.lab4.model.User"/>

        <!-- List of XML mapping files -->
        <!--<mapping resource="Employee.hbm.xml"/>-->

    </session-factory>
</hibernate-configuration>